# mappings for making up and down arrow searching through history:
bind '"\e[A" history-search-backward'
bind '"\e[B" history-search-forward'
bind '"\e[C" forward-char'
bind '"\e[D" backward-char'

# mapping to have [Tab] and [Shift]+[Tab] to cycle through all the possible completions:
"\t": menu-complete
"\e[Z": menu-complete-backward
set editing-mode vi
set show-mode-in-prompt on
set vi-ins-mode-string \1\e[34;1m\2 ⯈ \1\e[0m\2
set vi-cmd-mode-string \1\e[33;1m\2 ⯈ \1\e[0m\2
set keymap vi
set convert-meta on

#set show-mode-in-prompt on
#set vi-ins-mode-string "I_"
#set vi-cmd-mode-string "N_" 
#Use [Tab] and [Shift]+[Tab] to cycle through all the possible completions:

set show-all-if-ambiguous on
set show-all-if-unmodified on
set menu-complete-display-prefix on
"\t": menu-complete
"\e[Z": menu-complete-backward
